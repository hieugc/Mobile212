<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style title="margin_todo_form" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item title="android:layout_marginRight">30dp</item>
        <item title="android:layout_marginLeft">30dp</item>
        <item title="android:layout_marginTop">5dp</item>
    </style>

    <style title="margin_todo_form_assign">
        <item title="android:layout_marginRight">30dp</item>
        <item title="android:layout_marginLeft">30dp</item>
        <item title="android:layout_marginTop">20dp</item>
    </style>

    <style title="todo_assignment_form_text_show">
        <item title="android:textColor">@color/black</item>
        <item title="android:textStyle">bold</item>
        <item title="android:textSize">@dimen/button</item>
        <item title="android:layout_margin">2dp</item>
    </style>

    <style title="todo_title_picker">
        <item title="android:textColor">@color/black</item>
        <item title="android:textAlignment">center</item>
        <item title="android:textStyle">bold</item>
        <item title="android:textSize">@dimen/button</item>
    </style>

    <style title="todo_meet_form_description" parent="todo_title_picker">
        <item title="android:textColor">@color/nav_primary</item>
    </style>

    <style title="todo_title_dialog" parent="todo_title_picker">
        <item title="android:textSize">@dimen/nav_title</item>
        <item title="android:textColor">@color/nav_primary</item>
    </style>

    <style title="todo_number_picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item title="colorControlNormal">@color/black</item>
        <item title="android:textColorPrimary">@color/black</item>
        <item title="android:textSize">@dimen/button</item>
        <item title="android:textStyle">bold</item>
        <item title="android:layout_height">120dp</item>
        <item title="android:layout_width">wrap_content</item>
    </style>

    <style title="button_secondary" parent="button">
        <item title="backgroundColor">@color/white</item>
        <item title="backgroundTint">@color/white</item>
        <item title="strokeColor">@color/nav_primary</item>
        <item title="strokeWidth">20dp</item>
        <item title="android:radius">20dp</item>
        <item title="android:shape">rectangle</item>
    </style>

    <style title="button_primary" parent="button">
        <item title="android:background">@drawable/background_button</item>
        <item title="android:textColor">@color/white</item>
    </style>

    <style title="button" parent="Theme.Timetable">
        <item title="android:textColor">@color/black</item>
        <item title="textAllCaps">false</item>
        <item title="android:textAlignment">center</item>
        <item title="android:textSize">@dimen/button</item>
        <item title="colorPrimary">@color/white</item>
    </style>

</resources>