<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="margin_todo_form" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="margin_todo_form_assign">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="todo_assignment_form_text_show">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="todo_title_picker">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button</item>
    </style>

    <style name="todo_meet_form_description" parent="todo_title_picker">
        <item name="android:textColor">@color/nav_primary</item>
    </style>

    <style name="todo_title_dialog" parent="todo_title_picker">
        <item name="android:textSize">@dimen/nav_title</item>
        <item name="android:textColor">@color/nav_primary</item>
    </style>

    <style name="todo_number_picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="button_secondary" parent="button">
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/nav_primary</item>
        <item name="strokeWidth">20dp</item>
        <item name="android:radius">20dp</item>
        <item name="android:shape">rectangle</item>
    </style>

    <style name="button_primary" parent="button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button_remove" parent="button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/error_form</item>
    </style>

    <style name="button" parent="Theme.Timetable">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="colorPrimary">@color/white</item>
    </style>

