<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nav_primary"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:id="@+id/about_heading">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_to_settings"
            android:src="@drawable/ic_back_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About us"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_heading"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:text="Một ứng dụng thời khoá biểu/lịch học thực hiện bởi nhóm L01_DHHK của trường Đại học Bách Khoa TPHCM"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/hcmut"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/txt_heading"
        android:layout_centerInParent="true"
        android:src="@mipmap/hcmut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hcmut"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="https://www.hcmut.edu.vn/vi"
        android:textColor="@color/black"
        android:textSize="15sp" />

</RelativeLayout>