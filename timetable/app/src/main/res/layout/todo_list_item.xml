<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    >

    <CheckBox
        android:id="@+id/check_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_checkbox"
        android:buttonTint="@color/nav_primary"
        android:checked="true"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_line_bot"
        android:layout_toEndOf="@id/check_list_item"
        android:layout_toLeftOf="@id/link_list_item"
        android:padding="5dp"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/content_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thiết kế mockup"
            style="@style/todo_title_picker"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/link_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_link"
        app:tint="@color/nav_primary"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />

</RelativeLayout>